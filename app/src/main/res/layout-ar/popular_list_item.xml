<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:background="@color/BG_GRAY"
        android:elevation="2dp"
        >

        <com.tasree7a.CustomComponent.RoundedCornersImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/salon"
            android:scaleType="centerCrop"
            android:id="@+id/sallon_image"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:layout_below="@+id/sallon_image"
            android:background="@color/WHITE"
            android:paddingBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sallon_name"
                android:layout_marginRight="10dp"
                android:text="Ramallah"
                android:id="@+id/salon_city"
                android:textColor="@color/APP_BLACK"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19.3sp"
                android:layout_marginRight="12.3dp"
                android:layout_marginTop="13.7dp"
                android:layout_toLeftOf="@+id/salon_city"
                android:text="Malki Sallon,"
                android:textColor="@color/APP_BLACK"
                android:id="@+id/sallon_name"
                />


            <ImageView
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="13.7dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="11dp"
                android:src="@drawable/like"
                android:id="@+id/is_popular"
                />

            <com.tasree7a.CustomComponent.CustomRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sallon_name"
                android:layout_alignRight="@+id/sallon_name"
                android:layout_marginTop="3dp"
                android:id="@+id/salon_rating"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>