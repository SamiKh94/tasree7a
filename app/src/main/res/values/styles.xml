<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/APP_TEXT_COLOR</item>
        <item name="colorControlNormal">@color/APP_GREEN</item>
        <item name="colorControlActivated">@color/APP_GREEN</item>
        <item name="colorControlHighlight">@color/APP_GREEN</item>

    </style>

    <style name="CustomButtonBookBestDeals">

        <item name="customFonts">MEDIUM</item>

        <item name="makeIconWhite">false</item>

        <item name="customButtonTextColor">@color/WHITE</item>

        <item name="customButtonTextSize">18dp</item>

        <item name="customButtonBackgroundColor">@color/APP_GREEN</item>

        <item name="customButtonStrokeColor">@color/APP_GREEN</item>

        <item name="radius">10</item>

        <item name="android:layout_height">65dp</item>

    </style>



    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listDivider">@color/APP_TEXT_COLOR</item>
        <item name="colorControlNormal">@color/APP_GREEN</item>
        <item name="colorControlActivated">@color/APP_GREEN</item>
        <item name="colorControlHighlight">@color/APP_GREEN</item>

    </style>

    <style name="SpinnerTheme" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>
</resources>
